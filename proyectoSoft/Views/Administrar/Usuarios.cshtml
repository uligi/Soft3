@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Administrar</a></li>
    <li class="breadcrumb-item active">Usuarios</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-users me-1"></i> Lista de Usuarios
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModal(null)">Agregar</button>
            </div>
        </div>

        <hr />

        <table id="tabla" class="display cell-border" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido1</th>
                    <th>Apellido2</th>
                    <th>Correo</th>
                    <th>Rol</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Agregar Usuario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input id="UsuarioID" type="hidden" value="0" />

                <div class="row g-2">
                    <div class="col-12">
                        <h5>Identificación</h5>
                    </div>
                    <div class="col-sm-6">
                        <label for="cedula" class="form-label">Cédula</label>
                        <input type="text" class="form-control" id="cedula" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="nombre" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="apellido1" class="form-label">Apellido1</label>
                        <input type="text" class="form-control" id="apellido1" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="apellido2" class="form-label">Apellido2</label>
                        <input type="text" class="form-control" id="apellido2" autocomplete="off">
                    </div>
                </div>

                <div class="row g-2 mt-3">
                    <div class="col-12">
                        <h5>Contacto</h5>
                    </div>
                    <div class="col-sm-6">
                        <label for="correo" class="form-label">Correo</label>
                        <input type="email" class="form-control" id="correo" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="rolID" class="form-label">Rol</label>
                        <select class="form-select" id="rolID" aria-label="Default select example">
                            <option selected value="0">Seleccione un Rol</option>
                        </select>
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-12">
                        <div id="mensajeError" class="alert alert-danger" role="alert" style="display:none;">
                            A simple danger alert—check it out!
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="RestablecerModal" tabindex="-1" aria-labelledby="exampleRestablecerLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleRestablecerLabel">Restablecer Contraseña</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Está seguro de que desea restablecer la contraseña de este usuario?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Restablecer()">Restablecer</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        var tabladata;
        var usuarioSeleccionado;

        tabladata = $("#tabla").DataTable({
            responsive: true,
            ordering: false,
            "ajax": {
                url: '@Url.Action("ListarUsuarios", "Administrar")',
                type: "GET",
                datatype: "json"
            },
            "columns": [
                { "data": "Nombre" },
                { "data": "Apellido1" },
                { "data": "Apellido2" },
                { "data": "Correo" },
                { "data": "Rol" },
                {
                    "defaultContent": '<button type="button" class="btn btn-primary btn-small btn-editar"><i class="fas fa-pen"></i></button>' +
                                      '<button type="button" class="btn btn-warning btn-small ms-2 btn-restablecer"><i class="fas fa-redo"></i></button>' +
                                      '<button type="button" class="btn btn-danger btn-small ms-2 btn-eliminar"><i class="fas fa-trash"></i></button>',
                    "orderable": false,
                    "searchable": false,
                    "width": "150px"
                }
            ],
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.11.3/i18n/es_es.json"
            }
        });

        function abrirModal(json) {
            $("#UsuarioID").val(0);
            $("#cedula").val("");
            $("#nombre").val("");
            $("#apellido1").val("");
            $("#apellido2").val("");
            $("#correo").val("");
            $("#rolID").val(0);
            $("#mensajeError").hide();

            if (json != null) {
                $("#UsuarioID").val(json.UsuarioID);
                $("#cedula").val(json.Cedula);
                $("#nombre").val(json.Nombre);
                $("#apellido1").val(json.Apellido1);
                $("#apellido2").val(json.Apellido2);
                $("#correo").val(json.Correo);
                $("#rolID").val(json.RolID);
                $("#exampleModalLabel").text("Editar Usuario");
            } else {
                $("#exampleModalLabel").text("Agregar Usuario");
            }

            fetchDropdownData();
            $("#FormModal").modal("show");
        }

        function abrirRestablecerModal(json) {
            usuarioSeleccionado = json.UsuarioID;
            $("#RestablecerModal").modal("show");
        }

        function populateDropdown(selector, data) {
            var dropdown = $(selector);
            dropdown.empty();
            dropdown.append('<option value="0">Seleccione</option>');
            $.each(data, function (index, item) {
                dropdown.append($('<option>', {
                    value: item.RolID,
                    text: item.Rol
                }));
            });
        }

        function fetchDropdownData() {
            $.get('@Url.Action("ObtenerRoles", "Administrar")', function (data) {
                populateDropdown("#rolID", data);
            });
        }

        function Guardar() {
            var Usuario = {
                UsuarioID: parseInt($("#UsuarioID").val()),
                Cedula: parseInt($("#cedula").val()),
                Nombre: $("#nombre").val(),
                Apellido1: $("#apellido1").val(),
                Apellido2: $("#apellido2").val(),
                Correo: $("#correo").val(),
                RolID: parseInt($("#rolID").val())
            };

            $.ajax({
                url: '@Url.Action("GuardarUsuario", "Administrar")',
                type: "POST",
                data: JSON.stringify({ objeto: Usuario }),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    if (data.resultado != 0) {
                        tabladata.ajax.reload();
                        $("#FormModal").modal("hide");
                    } else {
                        $("#mensajeError").text(data.mensaje);
                        $("#mensajeError").show();
                    }
                },
                error: function (error) {
                    $("#mensajeError").text("Error Ajax");
                    $("#mensajeError").show();
                }
            });
        }

        function Restablecer() {
            $.ajax({
                url: '@Url.Action("RestablecerContrasena", "Administrar")',
                type: "POST",
                data: JSON.stringify({ usuarioID: usuarioSeleccionado }),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    if (data.resultado) {
                        tabladata.ajax.reload();
                        $("#RestablecerModal").modal("hide");
                        swal("¡Restablecido!", "La contraseña ha sido restablecida.", "success");
                    } else {
                        swal("Error", data.mensaje, "error");
                    }
                },
                error: function (error) {
                    swal("Error", "Hubo un problema con la solicitud.", "error");
                }
            });
        }

        $("#tabla tbody").on("click", ".btn-editar", function () {
            var filaseleccionada = $(this).closest("tr");
            var data = tabladata.row(filaseleccionada).data();
            abrirModal(data);
        });

        $("#tabla tbody").on("click", ".btn-restablecer", function () {
            var filaseleccionada = $(this).closest("tr");
            var data = tabladata.row(filaseleccionada).data();
            abrirRestablecerModal(data);
        });

        $("#tabla tbody").on("click", ".btn-eliminar", function () {
            var filaseleccionada = $(this).closest("tr");
            var data = tabladata.row(filaseleccionada).data();
            swal({
                title: "¿Estás seguro?",
                text: "¡No podrás recuperar este archivo imaginario!",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-danger",
                confirmButtonText: "¡Sí, bórralo!",
                closeOnConfirm: false
            }, function () {
                $.ajax({
                    url: '@Url.Action("EliminarUsuario", "Administrar")',
                    type: "POST",
                    data: JSON.stringify({ usuarioID: data.UsuarioID }),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        if (data.resultado) {
                            tabladata.row(filaseleccionada).remove().draw();
                            swal("¡Eliminado!", "El usuario ha sido eliminado.", "success");
                        } else {
                            swal("Error", data.mensaje, "error");
                        }
                    },
                    error: function (error) {
                        swal("Error", "Hubo un problema con la solicitud.", "error");
                    }
                });
            });
        });
    </script>
}
