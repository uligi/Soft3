@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Administrar</a></li>
    <li class="breadcrumb-item active">Empleados</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-users me-1"></i> Lista de Empleados
    </div>
    <div class=" card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModal(null)">Agregar</button>
            </div>
        </div>

        <hr />

        <table id="tabla" class="display cell-border" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Correo</th>
                    <th>Rol</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content ">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Agregar Empleado</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body ">
                <input id="UsuarioID" type="hidden" value="0" />

                <div class="row g-2">
                    <div class="col-sm-6">
                        <label for="cedula" class="form-label">Cédula</label>
                        <input type="text" class="form-control" id="cedula" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="nombre" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="apellido1" class="form-label">Apellido 1</label>
                        <input type="text" class="form-control" id="apellido1" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="apellido2" class="form-label">Apellido 2</label>
                        <input type="text" class="form-control" id="apellido2" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="direccion" class="form-label">Dirección detallada</label>
                        <input type="text" class="form-control" id="direccion" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="distritoID" class="form-label">Distrito</label>
                        <select class="form-select" id="distritoID" aria-label="Default select example">
                            <option selected value="0">Seleccione un Distrito</option>
                        </select>
                    </div>
                    <div class="col-sm-6">
                        <label for="cantonID" class="form-label">Cantón</label>
                        <select class="form-select" id="cantonID" aria-label="Default select example">
                            <option selected value="0">Seleccione un Cantón</option>
                        </select>
                    </div>
                    <div class="col-sm-6">
                        <label for="provinciaID" class="form-label">Provincia</label>
                        <select class="form-select" id="provinciaID" aria-label="Default select example">
                            <option selected value="0">Seleccione una Provincia</option>
                        </select>
                    </div>
                    <div class="col-sm-6">
                        <label for="telefono" class="form-label">Teléfono</label>
                        <input type="text" class="form-control" id="telefono" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="tipoTelefonoID" class="form-label">Tipo Teléfono</label>
                        <select class="form-select" id="tipoTelefonoID" aria-label="Default select example">
                            <option selected value="0">Seleccione un Tipo de Teléfono</option>
                        </select>
                    </div>
                    <div class="col-sm-6">
                        <label for="correo" class="form-label">Correo</label>
                        <input type="email" class="form-control" id="correo" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="tipoCorreoID" class="form-label">Tipo Correo</label>
                        <select class="form-select" id="tipoCorreoID" aria-label="Default select example">
                            <option selected value="0">Seleccione un Tipo de Correo</option>
                        </select>
                    </div>
                    <div class="col-sm-6">
                        <label for="rolID" class="form-label">Rol</label>
                        <select class="form-select" id="rolID" aria-label="Default select example">
                            <option selected value="0">Seleccione un Tipo de rol</option>
                        </select>
                    </div>

                    <div class="row mt-2">
                        <div class="col-12">
                            <div id="mensajeError" class="alert alert-danger" role="alert">
                                A simple danger alert—check it out!
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script>
    var tabladata;
    var dropdownData = {
        provincias: [],
        cantones: [],
        distritos: [],
        roles: [],
        tiposTelefono: [],
        tiposCorreo: []
    };

    tabladata = $("#tabla").DataTable({
        responsive: true,
        ordering: false,
        "ajax": {
            url: '@Url.Action("ListarUsuarios", "Administrar")',
            type: "GET",
            datatype: "json"
        },
        "columns": [
            { "data": "Nombre" },
            { "data": "Correo" },
            { "data": "RolID" },
            {
                "defaultContent": '<button type="button" class="btn btn-primary btn-small btn-editar"><i class="fas fa-pen"></i></button>' +
                                  '<button type="button" class="btn btn-danger btn-small ms-2 btn-eliminar"><i class="fas fa-trash"></i></button>',
                "orderable": false,
                "searchable": false,
                "width": "90px"
            }
        ],
        "language": {
            "url": "https://cdn.datatables.net/plug-ins/1.11.3/i18n/es_es.json"
        }
    });

        function abrirModal(json) {
            $("#UsuarioID").val(0);
            $("#cedula").val("");
            $("#nombre").val("");
            $("#correo").val("");
            $("#apellido1").val("");
            $("#apellido2").val("");
            $("#direccion").val("");
            $("#distritoID").val(0);
            $("#cantonID").val(0);
            $("#provinciaID").val(0);
            $("#telefono").val("");
            $("#tipoTelefonoID").val(0);
            $("#correo").val("");
            $("#tipoCorreoID").val(0);
            $("#rolID").val(0);

            $("#mensajeError").hide();

            if (json != null) {
                $("#UsuarioID").val(json.UsuarioID);
                $("#cedula").val(json.Cedula);
                $("#nombre").val(json.Nombre);
                $("#correo").val(json.Correo);
                $("#apellido1").val(json.Apellido1);
                $("#apellido2").val(json.Apellido2);

                if (json.Direccion) {
                    $("#direccion").val(json.Direccion.Descripcion || "");
                    $("#distritoID").val(json.Direccion.DistritoID || 0);
                    $("#cantonID").val(json.Direccion.CantonID || 0);
                    $("#provinciaID").val(json.Direccion.ProvinciaID || 0);
                }

                if (json.Telefono) {
                    $("#telefono").val(json.Telefono.Numero || "");
                    $("#tipoTelefonoID").val(json.Telefono.TipoTelefonoID || 0);
                }

                if (json.Correo) {
                    $("#correo").val(json.Correo.DireccionCorreo || "");
                    $("#tipoCorreoID").val(json.Correo.TipoCorreoID || 0);
                }

                $("#rolID").val(json.RolID);
            }

            fetchDropdownData();
            $("#FormModal").modal("show");
        }


        function populateDropdown(selector, data, key) {
            var dropdown = $(selector);
            dropdown.empty();
            dropdown.append('<option value="0">Seleccione</option>');
            dropdownData[key] = data; // Almacenar los datos en el objeto global

            $.each(data, function (index, item) {
                dropdown.append($('<option>', {
                    value: item.ID || item.CantonID || item.DistritoID || item.ProvinciaID || item.TipoTelefonoID || item.TipoCorreoID || item.RolID, // Usar el campo correcto
                    text: item.Descripcion
                }));
            });
        }


function fetchDropdownData() {
    showLoadingOverlay();

    $.when(
        $.get('@Url.Action("ObtenerProvincias", "Administrar")', function(data) {
            populateDropdown("#provinciaID", data, 'provincias');
        }),
        $.get('@Url.Action("ObtenerCantones", "Administrar")', function(data) {
            populateDropdown("#cantonID", data, 'cantones');
        }),
        $.get('@Url.Action("ObtenerDistritos", "Administrar")', function(data) {
            populateDropdown("#distritoID", data, 'distritos');
        }),
        $.get('@Url.Action("ObtenerRoles", "Administrar")', function(data) {
            populateDropdown("#rolID", data, 'roles');
        }),
        $.get('@Url.Action("ObtenerTiposTelefono", "Administrar")', function(data) {
            populateDropdown("#tipoTelefonoID", data, 'tiposTelefono');
        }),
        $.get('@Url.Action("ObtenerTiposCorreo", "Administrar")', function(data) {
            populateDropdown("#tipoCorreoID", data, 'tiposCorreo');
        })
    ).then(hideLoadingOverlay, hideLoadingOverlay);
}

function Guardar() {
    var Usuario = {

        Cedula: $("#cedula").val(),
        Persona: {

            Nombre: $("#nombre").val(),
            Apellido1: $("#apellido1").val(),
            Apellido2: $("#apellido2").val(),
            Direccion: {
                Descripcion: $("#direccion").val(),
                DistritoID: parseInt($("#distritoID").val()), // Convertir el valor a entero
                CantonID: parseInt($("#cantonID").val()),    // Convertir el valor a entero
                ProvinciaID: parseInt($("#provinciaID").val()) // Convertir el valor a entero
            },
            Telefono: {
                Numero: $("#telefono").val(),
                TipoTelefonoID: parseInt($("#tipoTelefonoID").val()) // Convertir el valor a entero
            },
            Correo: {
                DireccionCorreo: $("#correo").val(),
                TipoCorreoID: parseInt($("#tipoCorreoID").val()) // Convertir el valor a entero
            }
        },
        RolID: parseInt($("#rolID").val()) // Convertir el valor a entero
    };

    // Validación adicional antes de enviar
    if (Usuario.Persona.Direccion.DistritoID === 0 || Usuario.Persona.Direccion.CantonID === 0 || Usuario.Persona.Direccion.ProvinciaID === 0) {
        $("#mensajeError").text("Por favor, seleccione valores válidos para Distrito, Cantón y Provincia.");
        $("#mensajeError").show();
        return;
    }

    console.log("Datos a enviar:", Usuario);

    $.ajax({
        url: '@Url.Action("GuardarUsuario", "Administrar")',
        type: "POST",
        data: JSON.stringify({ objeto: Usuario }),
        dataType: "json",
        contentType: "application/json; charset=utf-8",
        success: function (data) {
            hideLoadingOverlay();
            if (data.resultado != 0) {
                tabladata.row.add(data.usuario).draw(false);
                $("#FormModal").modal("hide");
                location.reload()
            } else {
                $("#mensajeError").text(data.mensaje);
                $("#mensajeError").show();
            }
        },
        error: function (error) {
            hideLoadingOverlay();
            $("#mensajeError").text("Error Ajax");
            $("#mensajeError").show();
            console.log(error);
        },
        beforeSend: function () {
            showLoadingOverlay();
        }
    });
}

function showLoadingOverlay() {
    $(".modal-body").LoadingOverlay("show", {
        imageResizeFactor: 2,
        text: "Cargando...",
        size: 14
    });
}

function hideLoadingOverlay() {
    $(".modal-body").LoadingOverlay("hide");
}


    $("#tabla tbody").on("click", ".btn-editar", function () {
        var filaseleccionada = $(this).closest("tr");
        var data = tabladata.row(filaseleccionada).data();
        abrirModal(data);
    });


$("#tabla tbody").on("click", ".btn-eliminar", function () {
    var UsuarioSeleccionado = $(this).closest("tr");
    var data = tabladata.row(UsuarioSeleccionado).data();
    swal({
        title: "¿Estás seguro?",
        text: "¡No podrás recuperar este archivo imaginario!",
        type: "warning",
        showCancelButton: true,
        confirmButtonClass: "btn-danger",
        confirmButtonText: "¡Sí, bórralo!",
        closeOnConfirm: false
    }, function () {
        $.ajax({
            url: '@Url.Action("EliminarUsuario", "Administrar")',
            type: "POST",
            data: JSON.stringify({ cedula: data.Cedula }), // Asegúrate de usar el campo correcto
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                if (data.resultado) {
                    tabladata.row(UsuarioSeleccionado).remove().draw();
                    swal("¡Eliminado!", "El usuario ha sido eliminado.", "success");
                } else {
                    swal("Error", data.mensaje, "error");
                }
            },
            error: function (error) {
                console.log(error);
                swal("Error", "Hubo un problema con la solicitud.", "error");
            }
        });
    });
});


    </script>

}



}
