@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Inicio Sesion</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Iniciar sesión</h3></div>
                                <div class="card-body">
                                    <form id="loginForm" action="@Url.Action("Index","Acceso")" method="post">
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="inputEmail" name="correo" type="email" placeholder="Dunamis@correo.com" />
                                            <label for="inputEmail">Correo</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="inputPassword" name="clave" type="password" placeholder="Contraseña" />
                                            <label for="inputPassword">Contraseña</label>
                                        </div>
                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <button type="submit" class="btn btn-primary">Ingresar</button>
                                        </div>
                                        <div>
                                                @{
                                                    if (ViewBag.Error != null)
                                                    {
                                                        <div class="form-floating mb-3">
                                                            <div class="alert alert-danger" role="alert">
                                                                @ViewBag.Error
                                                            </div>
                                                        </div>
                                                    }
                                                }

                                        </div>

                                    </form>
                                </div>
                           
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
   
    </div>
    <script src="~/Scripts/bootstrap.bundle.js"></script>

</body>
</html>
