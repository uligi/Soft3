@{
    ViewBag.Title = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Administrar</a></li>
    <li class="breadcrumb-item active">Clientes</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-users me-1"></i> Lista de Clientes
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModal(null)">Agregar</button>
            </div>
        </div>

        <hr />

        <table id="tabla" class="display cell-border" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Cédula</th>
                    <th>Nombre</th>
                    <th>Apellido1</th>
                    <th>Apellido2</th>
                    <th>Correo</th>
                    <th>Tipo Cliente</th>
                    <th>Activo</th>
                    <th>Fecha</th>
                    <th>Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Agregar Cliente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input id="ClienteID" type="hidden" value="0" />

                <!-- Sección Datos Personales -->
                <div class="section">
                    <h5>Datos Personales</h5>
                    <div class="row g-2">
                        <div class="col-12">
                            <label for="cedula" class="form-label">Cédula</label>
                            <input type="text" class="form-control" id="cedula" autocomplete="off">
                        </div>
                        <div class="col-12">
                            <label for="nombre" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="nombre" autocomplete="off">
                        </div>
                        <div class="col-12">
                            <label for="apellido1" class="form-label">Apellido1</label>
                            <input type="text" class="form-control" id="apellido1" autocomplete="off">
                        </div>
                        <div class="col-12">
                            <label for="apellido2" class="form-label">Apellido2</label>
                            <input type="text" class="form-control" id="apellido2" autocomplete="off">
                        </div>
                    </div>
                </div>

                <hr />

                <!-- Sección Datos de Contacto -->
                <div class="section">
                    <h5>Datos de Contacto</h5>
                    <div class="row g-2">
                        <div class="col-12">
                            <label for="correo" class="form-label">Correo</label>
                            <input type="text" class="form-control" id="correo" autocomplete="off">
                        </div>
                        <div class="col-12">
                            <label for="tipoCorreoID" class="form-label">Tipo de Correo</label>
                            <select class="form-select" id="tipoCorreoID">
                                <option selected value="0">Seleccione un Tipo de Correo</option>
                            </select>
                        </div>
                    </div>
                </div>

                <hr />

                <!-- Sección Información del Cliente -->
                <div class="section">
                    <h5>Información del Cliente</h5>
                    <div class="row g-2">
                        <div class="col-12">
                            <label for="tipoClienteID" class="form-label">Tipo Cliente</label>
                            <select class="form-select" id="tipoClienteID">
                                <option selected value="0">Seleccione un Tipo de Cliente</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-12">
                        <div id="mensajeError" class="alert alert-danger" role="alert" style="display:none;">
                            Todos los campos son obligatorios.
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="PagosModal" tabindex="-1" aria-labelledby="PagosModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="PagosModalLabel">Pagos del Cliente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <table id="tablaPagos" class="display cell-border" style="width:100%">
                    <thead>
                        <tr>
                            <th>ID Pago</th>
                            <th>Tipo de Pago</th>
                            <th>Descripción</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        var tabladata;
        var tablaPagos;

        $(document).ready(function () {
            tabladata = $("#tabla").DataTable({
                responsive: true,
                ordering: false,
                "ajax": {
                    url: '@Url.Action("ListarClientes", "Cliente")',
                    type: "GET",
                    datatype: "json"
                },
                "columns": [
                    { "data": "ClienteID" },
                    { "data": "Cedula" },
                    { "data": "Nombre" },
                    { "data": "Apellido1" },
                    { "data": "Apellido2" },
                    { "data": "Correo" },
                    { "data": "TipoCliente" },
                    { "data": "Activo" },
                    { "data": "Fecha" },
                    {
                        "defaultContent": '<div class="btn-group">' +
                            '<button type="button" class="btn btn-primary btn-small btn-editar"><i class="fas fa-pen"></i></button>' +
                            '<button type="button" class="btn btn-danger btn-small ms-2 btn-eliminar"><i class="fas fa-trash"></i></button>' +
                            '<button type="button" class="btn btn-warning btn-small ms-2 btn-activar-desactivar"><i class="fas fa-toggle-on"></i></button>' +
                            '<button type="button" class="btn btn-info btn-small ms-2 btn-telefonos"><i class="fas fa-phone"></i></button>' +
                            '<button type="button" class="btn btn-secondary btn-small ms-2 btn-direcciones"><i class="fas fa-map-marker-alt"></i></button>' +
                            '<button type="button" class="btn btn-dark btn-small ms-2 btn-pagos"><i class="fas fa-money-bill"></i></button>' +
                            '</div>',
                        "orderable": false,
                        "searchable": false,
                        "width": "200px"
                    }
                ],
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.11.3/i18n/es_es.json"
                }
            });

            cargarTiposCliente();
            cargarTiposPago();
            cargarTiposCorreo();

            // Eventos para los botones después de cargar DataTable
            $('#tabla tbody').on('click', '.btn-editar', function () {
                var data = tabladata.row($(this).parents('tr')).data();
                abrirModal(data);
            });

            $('#tabla tbody').on('click', '.btn-eliminar', function () {
                var data = tabladata.row($(this).parents('tr')).data();
                eliminarCliente(data.ClienteID);
            });

            $('#tabla tbody').on('click', '.btn-activar-desactivar', function () {
                var data = tabladata.row($(this).parents('tr')).data();
                activarDesactivarCliente(data.ClienteID, data.Activo);
            });

            $('#tabla tbody').on('click', '.btn-pagos', function () {
                var data = tabladata.row($(this).parents('tr')).data();
                cargarPagosCliente(data.ClienteID);
                $("#PagosModal").modal("show");
            });
        });

        function abrirModal(json) {
            $("#ClienteID").val(0);
            $("#cedula").val("");
            $("#nombre").val("");
            $("#apellido1").val("");
            $("#apellido2").val("");
            $("#correo").val("");
            $("#tipoCorreoID").val(0);
            $("#tipoClienteID").val(0);
            $("#mensajeError").hide();

            if (json != null) {
                $("#ClienteID").val(json.ClienteID);
                $("#cedula").val(json.Cedula);
                $("#nombre").val(json.Nombre);
                $("#apellido1").val(json.Apellido1);
                $("#apellido2").val(json.Apellido2);
                $("#correo").val(json.Correo);
                $("#tipoCorreoID").val(json.TipoCorreoID);
                $("#tipoClienteID").val(json.TipoClienteID);
                $("#exampleModalLabel").text("Editar Cliente");
            } else {
                $("#exampleModalLabel").text("Agregar Cliente");
            }

            $("#FormModal").modal("show");
        }

        function Guardar() {
            var Cliente = {
                Cedula: $("#cedula").val(),
                Persona: {
                    Nombre: $("#nombre").val(),
                    Apellido1: $("#apellido1").val(),
                    Apellido2: $("#apellido2").val(),
                    Correo: {
                        DireccionCorreo: $("#correo").val(),
                        TipoCorreoID: parseInt($("#tipoCorreoID").val())
                    }
                },
                TipoClienteID: parseInt($("#tipoClienteID").val()),
                Activo: true // O false dependiendo de tu formulario
            };

            console.log(Cliente);

            if (Cliente.Cedula === "" || Cliente.Persona.Nombre === "" || Cliente.Persona.Apellido1 === "" || Cliente.Persona.Apellido2 === "" || Cliente.Persona.Correo.DireccionCorreo === "" || Cliente.Persona.Correo.TipoCorreoID === 0 || Cliente.TipoClienteID === 0) {
                $("#mensajeError").show();
                return;
            } else {
                $("#mensajeError").hide();
            }

            $.ajax({
                url: '@Url.Action("GuardarCliente", "Cliente")',
                type: "POST",
                data: JSON.stringify({ cliente: Cliente }),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    if (data.resultado) {
                        tabladata.ajax.reload();
                        $("#FormModal").modal("hide");
                    } else {
                        $("#mensajeError").text(data.mensaje);
                        $("#mensajeError").show();
                    }
                },
                error: function (error) {
                    $("#mensajeError").text("Error Ajax");
                    $("#mensajeError").show();
                }
            });
        }

        function eliminarCliente(clienteID) {
            swal({
                title: "¿Estás seguro?",
                text: "¡No podrás recuperar este archivo imaginario!",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-danger",
                confirmButtonText: "¡Sí, bórralo!",
                closeOnConfirm: false
            }, function () {
                $.ajax({
                    url: '@Url.Action("EliminarCliente", "Cliente")',
                    type: "POST",
                    data: JSON.stringify({ clienteID: clienteID }),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        if (data.resultado) {
                            tabladata.row($(this).parents('tr')).remove().draw();
                            swal("¡Eliminado!", "El cliente ha sido eliminado.", "success");
                        } else {
                            swal("Error", data.mensaje, "error");
                        }
                    },
                    error: function (error) {
                        swal("Error", "Hubo un problema con la solicitud.", "error");
                    }
                });
            });
        }

         function activarDesactivarCliente(clienteID, activo) {
            var accion = activo ? "Desactivar" : "Activar";
            swal({
                title: "¿Estás seguro?",
                text: `El cliente será ${accion.toLowerCase()}do.`,
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-danger",
                confirmButtonText: `¡Sí, ${accion.toLowerCase()}!`,
                closeOnConfirm: false
            }, function () {
                $.ajax({
                    url: '@Url.Action("ActivarDesactivarCliente", "Cliente")',
                    type: "POST",
                    data: JSON.stringify({ clienteID: clienteID, activo: !activo }),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        if (data.resultado) {
                            tabladata.ajax.reload();
                            swal(`${accion}ado!`, `El cliente ha sido ${accion.toLowerCase()}do.`, "success");
                        } else {
                            swal("Error", data.mensaje, "error");
                        }
                    },
                    error: function (error) {
                        swal("Error", "Hubo un problema con la solicitud.", "error");
                    }
                });
            });
        }


        function cargarPagosCliente(clienteID) {
            if ($.fn.DataTable.isDataTable("#tablaPagos")) {
                $("#tablaPagos").DataTable().destroy();
            }

            tablaPagos = $("#tablaPagos").DataTable({
                responsive: true,
                ordering: false,
                "ajax": {
                    url: '@Url.Action("ListarPagosCliente", "Cliente")',
                    type: "GET",
                    data: { clienteID: clienteID },
                    datatype: "json"
                },
                "columns": [
                    { "data": "PagoID" },
                    { "data": "TipoPago" },
                    { "data": "Descripcion" },
                    { "data": "Fecha" }
                ],
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.11.3/i18n/es_es.json"
                }
            });
        }

        function cargarTiposCliente() {
            $.get('@Url.Action("ListarTiposCliente", "Cliente")', function (data) {
                var tipoClienteDropdown = $("#tipoClienteID");
                tipoClienteDropdown.empty();
                tipoClienteDropdown.append('<option value="0">Seleccione un Tipo de Cliente</option>');
                $.each(data.data, function (index, item) {
                    tipoClienteDropdown.append($('<option>', {
                        value: item.TipoClienteID,
                        text: item.Descripcion
                    }));
                });
            });
        }

        function cargarTiposPago() {
            $.get('@Url.Action("ListarTiposPago", "Cliente")', function (data) {
                var pagoDropdown = $("#tipoPagoID");
                pagoDropdown.empty();
                pagoDropdown.append('<option value="0">Seleccione un Tipo de Pago</option>');
                $.each(data.data, function (index, item) {
                    pagoDropdown.append($('<option>', {
                        value: item.TipoPagoID,
                        text: item.Descripcion
                    }));
                });
            });
        }

        function cargarTiposCorreo() {
            $.get('@Url.Action("ListarTiposCorreo", "Cliente")', function (data) {
                var correoDropdown = $("#tipoCorreoID");
                correoDropdown.empty();
                correoDropdown.append('<option value="0">Seleccione un Tipo de Correo</option>');
                $.each(data.data, function (index, item) {
                    correoDropdown.append($('<option>', {
                        value: item.TipoCorreoID,
                        text: item.Descripcion
                    }));
                });
            });
        }
    </script>
}
