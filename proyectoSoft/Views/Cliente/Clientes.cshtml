@section scripts {
    <script>
        var tabladata;
        var tablaPagos;
        var tablaTelefonos;
        var tablaDirecciones;
        var clienteSeleccionado;
        var FilaSeleccionada;

        //***************************************************************************************************** */
        //***************************************Clientes************************************************************** */
        //***************************************************************************************************** */


        $(document).ready(function () {
            tabladata = $("#tabla").DataTable({
                responsive: true,
                ordering: false,
                "ajax": {
                    url: '@Url.Action("ListarClientes", "Cliente")',
                    type: "GET",
                    datatype: "json"
                },
                "columns": [
                    { "data": "ClienteID" },
                    {
                        "data": "Cedula",
                        "render": function (data, type, row) {
                            var cedulaStr = data.toString();
                            if (cedulaStr.length === 9) {
                                // Formato para cédula de 9 dígitos: 0-1506-0701
                                return cedulaStr[0] + '-' + cedulaStr.slice(1, 5) + '-' + cedulaStr.slice(5);
                            } else if (cedulaStr.length === 10) {
                                // Formato para cédula de 10 dígitos: 1-1506-0701
                                return cedulaStr[0] + '-' + cedulaStr.slice(1, 5) + '-' + cedulaStr.slice(5);
                            } else {
                                // En caso de longitud inesperada, devuelve la cédula sin formato
                                return cedulaStr;
                            }
                        }
                    },
                    { "data": "Nombre" },
                    { "data": "Apellido1" },
                    { "data": "Apellido2" },
                    { "data": "Correo" },
                    { "data": "TipoCliente" },
                    {
                        "data": "Activo",
                        "render": function (data, type, row) {
                            if (data) {
                                return '<span class="badge bg-success">Si</span>';
                            } else {
                                return '<span class="badge bg-danger">No</span>';
                            }
                        }
                    },
                    { "data": "Fecha" },
                    {
                        "defaultContent": '<div class="btn-group">' +
                            '<button type="button" class="btn btn-primary btn-small btn-editar"><i class="fas fa-pen"></i></button>' +
                            '<button type="button" class="btn btn-danger btn-small ms-2 btn-eliminar"><i class="fas fa-trash"></i></button>' +
                            '<button type="button" class="btn btn-info btn-small ms-2 btn-telefonos"><i class="fas fa-phone"></i></button>' +
                            '<button type="button" class="btn btn-secondary btn-small ms-2 btn-direcciones"><i class="fas fa-map-marker-alt"></i></button>' +
                            '<button type="button" class="btn btn-dark btn-small ms-2 btn-pagos"><i class="fas fa-money-bill"></i></button>' +
                            '</div>',
                        "orderable": false,
                        "searchable": false,
                        "width": "200px"
                    }
                ],
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.11.3/i18n/es_es.json"
                }
            });
            
            cargarTiposCliente();
            cargarTiposPago();
            cargarTiposCorreo();

            $('#tabla tbody').on('click', '.btn-editar', function () {
             
                FilaSeleccionada = $(this).closest("tr");
                var data = tabladata.row(FilaSeleccionada).data();
                abrirModal(data);
            });

            $('#tabla tbody').on('click', '.btn-eliminar', function () {
                FilaSeleccionada = $(this).closest("tr");
                var data = tabladata.row(FilaSeleccionada).data();
                eliminarCliente(data.ClienteID);
            });

            $('#tabla tbody').on('click', '.btn-activar-desactivar', function () {
                FilaSeleccionada = $(this).closest("tr");
                var data = tabladata.row(FilaSeleccionada).data();
                activarDesactivarCliente(data.ClienteID, data.Activo);
            });

            $('#tabla tbody').on('click', '.btn-pagos', function () {
                FilaSeleccionada = $(this).closest("tr");
                var data = tabladata.row(FilaSeleccionada).data();
                clienteSeleccionado = data.ClienteID;
                cargarPagosCliente(clienteSeleccionado);
                $("#PagosModal").modal("show");
            });
            
            $('#tabla tbody').on('click', '.btn-direcciones', function () {
                FilaSeleccionada = $(this).closest("tr");
                var data = tabladata.row(FilaSeleccionada).data();
                clienteSeleccionado = data.ClienteID;
                cargarDireccionesCliente(clienteSeleccionado);
                $("#DireccionesModal").modal("show");
            });



            $('#tabla tbody').on('click', '.btn-telefonos', function () {
                FilaSeleccionada = $(this).closest("tr");
                var data = tabladata.row(FilaSeleccionada).data();
                clienteSeleccionado = data.Cedula;
                cargarTelefonosCliente(clienteSeleccionado);
                $("#TelefonoModal").modal("show");
            });
        });

        function abrirModal(json) {
            $("#ClienteID").val(0);
            $("#cedula").val("");
            $("#nombre").val("");
            $("#apellido1").val("");
            $("#apellido2").val("");
            $("#correo").val("");
            $("#tipoCorreoID").val(0);
            $("#tipoClienteID").val(0);
            $("#mensajeError").hide();

            if (json != null) {
                $("#ClienteID").val(json.ClienteID);
                $("#cedula").val(json.Cedula);
                $("#nombre").val(json.Nombre);
                $("#apellido1").val(json.Apellido1);
                $("#apellido2").val(json.Apellido2);
                $("#correo").val(json.Correo);
                $("#tipoCorreoID").val(json.TipoCorreoID);
                $("#tipoClienteID").val(json.TipoClienteID);
                $("#exampleModalLabel").text("Editar Cliente");
            } else {
                $("#exampleModalLabel").text("Agregar Cliente");
            }

            $("#FormModal").modal("show");
        }

        function Guardar() {
            var Cliente = {
                ClienteID: parseInt($("#ClienteID").val()),
                Cedula: $("#cedula").val(),
                Persona: {
                    Nombre: $("#nombre").val(),
                    Apellido1: $("#apellido1").val(),
                    Apellido2: $("#apellido2").val(),
                    Correo: {
                        DireccionCorreo: $("#correo").val(),
                        TipoCorreoID: parseInt($("#tipoCorreoID").val())
                    }
                },
                TipoClienteID: parseInt($("#tipoClienteID").val()),
                Activo: true
            };

            if (Cliente.Cedula === "" || Cliente.Persona.Nombre === "" || Cliente.Persona.Apellido1 === "" || Cliente.Persona.Apellido2 === "" || Cliente.Persona.Correo.DireccionCorreo === "" || Cliente.Persona.Correo.TipoCorreoID === 0 || Cliente.TipoClienteID === 0) {
                $("#mensajeError").show();
                return;
            } else {
                $("#mensajeError").hide();
            }

            $.ajax({
                url: '@Url.Action("GuardarCliente", "Cliente")',
                type: "POST",
                data: JSON.stringify({ cliente: Cliente }),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    if (Cliente.ClienteID == 0) {
                        if (data.resultado != 0) {
                            tabladata.ajax.reload();
                            $("#FormModal").modal("hide");
                        } else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }
                    } else {
                        if (data.resultado) {
                            tabladata.row(filaseleccionada).data(Cliente).draw(false);
                            filaseleccionada = null;
                            tabladata.ajax.reload();
                            $("#FormModal").modal("hide");
                        } else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }
                    }
                }
            });
        }

        function eliminarCliente(clienteID) {
            swal({
                title: "¿Estás seguro?",
                text: "¡No podrás recuperar este archivo imaginario!",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-danger",
                confirmButtonText: "¡Sí, bórralo!",
                closeOnConfirm: false
            }, function () {
                $.ajax({
                    url: '@Url.Action("EliminarCliente", "Cliente")',
                    type: "POST",
                    data: JSON.stringify({ clienteID: clienteID }),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        if (data.resultado) {
                            tabladata.row($(this).parents('tr')).remove().draw();
                            swal("¡Eliminado!", "El cliente ha sido eliminado.", "success");
                        } else {
                            swal("Error", data.mensaje, "error");
                        }
                    },
                    error: function (error) {
                        swal("Error", "Hubo un problema con la solicitud.", "error");
                    }
                });
            });
        }

        function activarDesactivarCliente(clienteID, activo) {
            var accion = activo ? "Desactivar" : "Activar";
            swal({
                title: "¿Estás seguro?",
                text: `El cliente será ${accion.toLowerCase()}do.`,
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-danger",
                confirmButtonText: `¡Sí, ${accion.toLowerCase()}!`,
                closeOnConfirm: false
            }, function () {
                $.ajax({
                    url: '@Url.Action("ActivarDesactivarCliente", "Cliente")',
                    type: "POST",
                    data: JSON.stringify({ clienteID: clienteID, activo: !activo }),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        if (data.resultado) {
                            tabladata.ajax.reload();
                            swal(`${accion}ado!`, `El cliente ha sido ${accion.toLowerCase()}do.`, "success");
                        } else {
                            swal("Error", data.mensaje, "error");
                        }
                    },
                    error: function (error) {
                        swal("Error", "Hubo un problema con la solicitud.", "error");
                    }
                });
            });
        }

        function cargarTiposCorreo() {
            $.get('@Url.Action("ListarTiposCorreo", "Cliente")', function (data) {
                var correoDropdown = $("#tipoCorreoID");
                correoDropdown.empty();
                correoDropdown.append('<option value="0">Seleccione un Tipo de Correo</option>');
                $.each(data.data, function (index, item) {
                    correoDropdown.append($('<option>', {
                        value: item.TipoCorreoID,
                        text: item.Descripcion
                    }));
                });
            });
        }

        function cargarTiposCliente() {
            $.get('@Url.Action("ListarTipoCliente", "Gestionar")', function (data) {
                var tipoClienteDropdown = $("#tipoClienteID");
                tipoClienteDropdown.empty();
                tipoClienteDropdown.append('<option value="0">Seleccione un Tipo de Cliente</option>');
                $.each(data.data, function (index, item) {
                    tipoClienteDropdown.append($('<option>', {
                        value: item.TipoClienteID,
                        text: item.Descripcion
                    }));
                });
            }).fail(function () {
                console.error("Error al cargar los tipos de cliente.");
            });
        }

        //***************************************************************************************************** */
        //***************************************Pagos************************************************************** */
        //***************************************************************************************************** */


        function cargarTiposPago() {
            $.get('@Url.Action("ListarTiposPago", "Cliente")', function (data) {
                var pagoDropdown = $("#tipoPagoID");
                pagoDropdown.empty();
                pagoDropdown.append('<option value="0">Seleccione un Tipo de Pago</option>');
                $.each(data.data, function (index, item) {
                    pagoDropdown.append($('<option>', {
                        value: item.TipoPagoID,
                        text: item.Descripcion
                    }));
                });
            });
