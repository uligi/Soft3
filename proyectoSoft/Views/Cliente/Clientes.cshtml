@{
        ViewBag.Title = "Clientes";
        Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Administrar</a></li>
    <li class="breadcrumb-item active">Clientes</li>
</ol>


<!-- ***************************************************************************************************** */
 //***************************************Clientes************************************************************** */
 //***************************************************************************************************** */-->


<div class="card">
    <div class="card-header">
        <i class="fas fa-users me-1"></i> Lista de Clientes
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModal(null)">Agregar</button>
            </div>
        </div>

        <hr />

        <table id="tabla" class="display cell-border" style="width:100%">
            <thead>
                <tr>
                    <th>ClienteID</th>
                    <th>Cédula</th>
                    <th>Nombre</th>
                    <th>Primer apellido</th>
                    <th>Segundo apellido</th>
                    <th>Correo</th>
                    <th>Tipo Cliente</th>
                    <th>Activo</th>
                    <th>Fecha</th>
                    <th>Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<div class="modal fade form" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Agregar Cliente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input id="ClienteID" type="hidden" value="0" />

                <div class="section">
                    <h5>Datos Personales</h5>
                    <div class="row g-2">
                        <div class="col-12">
                            <label for="cedula" class="form-label">Cédula</label>
                            <input type="text" class="form-control validar-Cedula" id="cedula" autocomplete="off">
                        </div>
                        <div class="col-12">
                            <label for="nombre" class="form-label">Nombre</label>
                            <input type="text" class="form-control validar-letras" id="nombre" autocomplete="off">
                        </div>
                        <div class="col-12">
                            <label for="apellido1" class="form-label">Apellido1</label>
                            <input type="text" class="form-control validar-letras" id="apellido1" autocomplete="off">
                        </div>
                        <div class="col-12">
                            <label for="apellido2" class="form-label">Apellido2</label>
                            <input type="text" class="form-control validar-letras" id="apellido2" autocomplete="off">
                        </div>
                    </div>
                </div>

                <hr />

                <div class="section">
                    <h5>Datos de Contacto</h5>
                    <div class="row g-2">
                        <div class="col-12">
                            <label for="correo" class="form-label">Correo</label>
                            <input type="text" class="form-control validar-correo" id="correo" autocomplete="off">
                        </div>
                        <div class="col-12">
                            <label for="tipoCorreoID" class="form-label">Tipo de Correo</label>
                            <select class="form-select" id="tipoCorreoID">
                                <option selected value="0">Seleccione un Tipo de Correo</option>
                            </select>
                        </div>
                    </div>
                </div>

                <hr />

                <div class="section">
                    <h5>Información del Cliente</h5>
                    <div class="row g-2">
                        <div class="col-12">
                            <label for="tipoClienteID" class="form-label">Tipo Cliente</label>
                            <select class="form-select" id="tipoClienteID">
                                <option selected value="0">Seleccione un Tipo de Cliente</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-12">
                        <div id="mensajeError" class="alert alert-danger" role="alert" style="display:none;">
                            Todos los campos son obligatorios.
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>

