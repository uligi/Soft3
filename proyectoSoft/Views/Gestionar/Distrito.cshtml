@{
    ViewBag.Title = "Distritos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Administrar</a></li>
    <li class="breadcrumb-item active">Distritos</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-map-marker-alt me-1"></i> Lista de Distritos
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModal(null)">Agregar</button>
            </div>
        </div>

        <hr />

        <table id="tabla" class="display cell-border" style="width:100%">
            <thead>
                <tr>
                    <th>Descripción</th>
                    <th>Cantón</th>
                    <th>Provincia</th>
                    <th>Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Agregar Distrito</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input id="DistritoID" type="hidden" value="0" />
                <div class="row g-2">
                    <div class="col-12">
                        <label for="provinciaID" class="form-label">Provincia</label>
                        <select class="form-select" id="provinciaID" onchange="cargarCantones()">
                            <option selected value="0">Seleccione una Provincia</option>
                        </select>
                    </div>
                    <div class="col-12">
                        <label for="cantonID" class="form-label">Cantón</label>
                        <select class="form-select" id="cantonID">
                            <option selected value="0">Seleccione un Cantón</option>
                        </select>
                    </div>
                    <div class="col-12">
                        <label for="descripcion" class="form-label">Descripción</label>
                        <input type="text" class="form-control" id="descripcion" autocomplete="off">
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-12">
                        <div id="mensajeError" class="alert alert-danger" role="alert" style="display:none;">
                            La descripción del distrito no puede estar vacía.
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        var tabladata;

        $(document).ready(function () {
            tabladata = $("#tabla").DataTable({
                responsive: true,
                ordering: false,
                "ajax": {
                    url: '@Url.Action("ListarDistrito", "Gestionar")',
                    type: "GET",
                    datatype: "json"
                },
                "columns": [
                    { "data": "Descripcion" },
                    { "data": "CantonDescripcion" },
                    { "data": "ProvinciaDescripcion" },
                    {
                        "defaultContent": '<button type="button" class="btn btn-primary btn-small btn-editar"><i class="fas fa-pen"></i></button>' +
                                          '<button type="button" class="btn btn-danger btn-small ms-2 btn-eliminar"><i class="fas fa-trash"></i></button>',
                        "orderable": false,
                        "searchable": false,
                        "width": "90px"
                    }
                ],
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.11.3/i18n/es_es.json"
                }
            });

            cargarProvincias();
        });

        function abrirModal(json) {
            $("#DistritoID").val(0);
            $("#descripcion").val("");
            $("#provinciaID").val(0);
            $("#cantonID").val(0);
            $("#mensajeError").hide();

            if (json != null) {
                $("#DistritoID").val(json.DistritoID);
                $("#descripcion").val(json.Descripcion);
                $("#provinciaID").val(json.Canton.Provincia.ProvinciaID);
                cargarCantones(json.Canton.CantonID);
                $("#exampleModalLabel").text("Editar Distrito");
            } else {
                $("#exampleModalLabel").text("Agregar Distrito");
            }

            $("#FormModal").modal("show");
        }

        function Guardar() {
            var Distrito = {
                DistritoID: parseInt($("#DistritoID").val()),
                Descripcion: $("#descripcion").val(),
                CantonID: parseInt($("#cantonID").val())
            };

            if (Distrito.Descripcion === "") {
                $("#mensajeError").show();
                return;
            } else {
                $("#mensajeError").hide();
            }

            $.ajax({
                url: '@Url.Action("GuardarDistrito", "Gestionar")',
                type: "POST",
                data: JSON.stringify({ distrito: Distrito }),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    if (data.resultado) {
                        tabladata.ajax.reload();
                        $("#FormModal").modal("hide");
                    } else {
                        $("#mensajeError").text(data.mensaje);
                        $("#mensajeError").show();
                    }
                },
                error: function (error) {
                    $("#mensajeError").text("Error Ajax");
                    $("#mensajeError").show();
                }
            });
        }

        $("#tabla tbody").on("click", ".btn-editar", function () {
            var filaseleccionada = $(this).closest("tr");
            var data = tabladata.row(filaseleccionada).data();
            abrirModal(data);
        });

        $("#tabla tbody").on("click", ".btn-eliminar", function () {
            var filaseleccionada = $(this).closest("tr");
            var data = tabladata.row(filaseleccionada).data();
            swal({
                title: "¿Estás seguro?",
                text: "¡Se eliminara el distrito!",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-danger",
                confirmButtonText: "¡Sí, bórralo!",
                closeOnConfirm: false
            }, function () {
                $.ajax({
                    url: '@Url.Action("EliminarDistrito", "Gestionar")',
                    type: "POST",
                    data: JSON.stringify({ distritoID: data.DistritoID }),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        if (data.resultado) {
                            tabladata.row(filaseleccionada).remove().draw();
                            swal("¡Eliminado!", "El distrito ha sido eliminado.", "success");
                        } else {
                            swal("Error", data.mensaje, "error");
                        }
                    },
                    error: function (error) {
                        swal("Error", "Hubo un problema con la solicitud.", "error");
                    }
                });
            });
        });

        function cargarProvincias() {
            $.get('@Url.Action("ListarProvincia", "Gestionar")', function (data) {
                var provinciaDropdown = $("#provinciaID");
                provinciaDropdown.empty();
                provinciaDropdown.append('<option value="0">Seleccione una Provincia</option>');
                $.each(data.data, function (index, item) {
                    provinciaDropdown.append($('<option>', {
                        value: item.ProvinciaID,
                        text: item.Descripcion
                    }));
                });
            });
        }

        function cargarCantones(selectedCantonID = 0) {
            var provinciaID = $("#provinciaID").val();
            if (provinciaID > 0) {
                $.get('@Url.Action("ListarCantonesPorProvincia", "Gestionar")', { provinciaID: provinciaID }, function (data) {
                    var cantonDropdown = $("#cantonID");
                    cantonDropdown.empty();
                    cantonDropdown.append('<option value="0">Seleccione un Cantón</option>');
                    $.each(data.data, function (index, item) {
                        cantonDropdown.append($('<option>', {
                            value: item.CantonID,
                            text: item.Descripcion,
                            selected: item.CantonID == selectedCantonID
                        }));
                    });
                });
            } else {
                $("#cantonID").empty();
                $("#cantonID").append('<option value="0">Seleccione un Cantón</option>');
            }
        }
    </script>
}
