<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Dunamis</title>
    @Styles.Render("~/Content/css")
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #FCFDF4;
        }

        .navbar-brand {
            font-size: 1.5em;
            color: #1A2130;
        }

        .sb-topnav.navbar {
            background-color: #83B4FF;
        }

        .sb-sidenav-dark {
            background-color: #5A72A0;
        }

        .sb-sidenav .nav-link {
            color: #5A72A0; /* Color del texto del menú */
        }

            .sb-sidenav .nav-link:hover {
                background-color: #D6E3F3; /* Fondo al hacer hover */
                color: #5A72A0; /* Color del texto al hacer hover */
            }

        .sb-sidenav .sb-sidenav-footer {
            background-color: #7C8AA6;
            color: #FCFDF4;
        }

        .sb-sidenav .sb-sidenav-menu-heading {
            color: #1A2130;
        }

        .btn-admin {
            background-color: #1A2130;
            color: white;
        }

        .btn-general {
            background-color: #5A72A0;
            color: white;
        }

        footer.bg-light {
            background-color: #D6E3F3;
        }

        footer .text-muted {
            color: #434A54;
        }

        footer a {
            color: #1A2130;
        }
    </style>
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark">
        <a class="navbar-brand ps-3" href="index.html">Dunamis_SA</a>
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        <ul class="navbar-nav ms-auto me-0 me-md-3 my-2 my-md-0">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#!">Ajustes</a></li>
                    <li><a class="dropdown-item" href="#!">Actividad</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" href="#!">Cerrar Sesión</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Bienvenido</div>
                        <a class="nav-link" href="index.html">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Administrador
                        </a>
                        <a class="nav-link" href="index.html">
                            <div class="sb-nav-link-icon"><i class="fas fa-user"></i></div>
                            Usuario
                        </a>
                        <div class="sb-sidenav-menu-heading">Menu</div>
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseLayouts" aria-expanded="false" aria-controls="collapseLayouts">
                            <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                            <b>Administrar</b>
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseLayouts" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" href="@Url.Action("Clientes","Administrar")">Clientes</a>
                                <a class="nav-link" href="@Url.Action("CotizarCargas","Administrar")">Cotizar Cargas</a>
                                <a class="nav-link" href="@Url.Action("Facturas","Administrar")">Facturas</a>
                                <a class="nav-link" href="@Url.Action("Pagos","Administrar")">Pagos</a>
                                <a class="nav-link" href="@Url.Action("Reportes","Administrar")">Reportes</a>
                            </nav>
                        </div>
                    
             
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Logged in as:</div>
                    Dunamis
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    @RenderBody()
                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">&copy; Dunamis 2023</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/complementos")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
